doctype html
html
  head
    title= title
    link(rel='stylesheet', href='http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.css')
    link(rel='stylesheet', href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css')
    link(rel='stylesheet', href='stylesheets/styleindex.css')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js')
    script(src='http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js')
    script(src='/javascripts/global.js')
  body

  h1= title
  p Welcome to our test

  // Wrapper
  #wrapper

      // USER INFO
      #userInfo
          h2 User Info
          p
              strong Name:
              |  <span id='ideaInfoName'></span>
              br
              strong Type:
              |  <span id='ideaInfoType'></span>
              br
              strong Description:
              |  <span id='ideaInfoDesc'></span>
              br
              strong Location:
              |  <span id='ideaInfoLocation'></span>
      // /USER INFO

      // USER LIST
      h2 User List
      #userList
          table
              thead
                  th IdeaName
                  th Type
                  th Delete?
              tbody
      // /USER LIST

      // ADD USER
      h2 Add User
      #addUser
          fieldset
              input#inputIdeaName(type='text', placeholder='Name')
              br
              input#inputIdeaType(type='text', placeholder='Type')
              br
              input#inputIdeaDesc(type='text', placeholder='Description')
              br
              input#inputIdeaLocation(type='text', placeholder='Long,Lat')
              br
              button#btnAddIdea New Idea
      // /ADD USER

  // /WRAPPER
